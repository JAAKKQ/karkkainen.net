---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
// import Testimonials from '~/components/widgets/Testimonials.astro';
import Steps from '~/components/widgets/Steps.astro';
// import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Homepage',
};
---

<Layout metadata={metadata}>
  <Hero id="hero" title="Rene Kärkkäinen" tagline="Personal Website">
    <Fragment slot="subtitle">
      Welcome to my digital abode! I'm a tech enthusiast and student navigating the landscape of information technology
      with a security-first mindset. Here, you can explore some of my projects and experiences. Settle in!
    </Fragment>
  </Hero>

  <!-- About Me **************** -->

  <Content
    id="about"
    columns={3}
    items={[
      {
        icon: 'tabler:at',
        callToAction: {
          text: 'E-Mail',
          href: 'contact',
        },
      },
      {
        icon: 'tabler:brand-teams',
        callToAction: {
          text: 'Teams',
          href: 'r/teams',
        },
      },
      {
        icon: 'tabler:brand-linkedin',
        callToAction: {
          text: 'LinkedIn',
          href: 'r/linkedin',
        },
      },
      {
        icon: 'tabler:brand-github',
        callToAction: {
          text: 'GitHub',
          href: 'r/github',
        },
      },
      {
        icon: 'tabler:message',
        callToAction: {
          text: 'Form',
          href: 'contact#section-form',
        },
      },
    ]}
    image={{
      src: '~/assets/images/Portrait.jpg',
      alt: 'Me posing somewhere in Hong Kong',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About me</h2>
      <p>
        Hey there! I'm 19 and I've spent the last six years getting hands-on with
        servers, networks and cyber security. I'm really into figuring out how things work (and how to keep them safe). I've
        also dabbled in IT management and software development along the way.
      </p>
      <br />
      <p>Feel free to reach out however suits you best!</p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Resume ****************** -->

  <Steps
    id="resume"
    title="Work Experience"
    items={[
      {
        title:
          'Managing Director<br> <span class="font-normal">Rene Investments Ab, Vantaa, Finland</span> <br/><span class="text-sm font-normal">Dec 2024 - Present | Hobby</span>',
        description: `Managing investments, accounting, and ensuring a slow and steady growth of investments.`,
        icon: 'tabler:currency-dollar',
      },
      {
        title:
          'IT Manager<br> <span class="font-normal">Nordiska Partners Limited, Hong Kong SAR</span> <br/><span class="text-sm font-normal">Jun - Jul 2024 | Internship</span>',
        description: `I was responsible for overseeing IT operations and creating new security measures to strengthen the company's security posture. I optimized the budget and managed vendor relations.`,
        icon: 'tabler:chart-area-line',
      },
      {
        title:
          'Information Technology Trainee<br> <span class="font-normal">WithSecure Oyj, Helsinki, Finland</span> <br/><span class="text-sm font-normal">Oct - Dec 2023 | Internship</span>',
        description: `Maintained computer systems and hardware, analyzed customer data to ensure accuracy and integrity, troubleshooted internal IT issues, and wrote documentation for hardware installation procedures.`,
        icon: 'tabler:analyze',
      },
      {
        title:
          'Nursing Home Assistant<br> <span class="font-normal">City of Helsinki, Helsinki, Finland</span> <br /> <span class="text-sm font-normal">Jun - Jul 2022 | Summer Job</span>',
        description: `Brightened residents' days with walks, reading time, and fun outings like disco nights, bingo games, and trips to parks.`,
        icon: 'tabler:stethoscope',
      },
      {
        title:
          'Store Assistant<br> <span class="font-normal">K-Market Rekola, Vantaa, Finland</span> <br /> <span class="text-sm font-normal">Dec 2021  | Internship</span>',
        description: `Contribute to efficient store operations by assisting with sales, shipment logistics, providing customer service, and ensuring the store maintains a clean and organized environment.`,
        icon: 'tabler:building-store',
      },
    ]}
    classes={{ container: 'max-w-3xl' }}
  />

  <!-- Education ****************** -->

  <Steps
    id="education"
    title="Education"
    items={[
      {
        title: `Bachelor of Engineering, Information and Communication Technology<br /><span class="font-normal">Metropolia University of Applied Sciences</span><br/><span class="text-sm font-normal">Jan 2024 - Present </span>`,
        icon: 'tabler:school',
      },
      {
        title: `High School <br /> <span class="font-normal">Töölön yhteiskoulun aikuislukio</span> <br /> <span class="text-sm font-normal">Aug 2022 - May 2025 </span>`,
        icon: 'tabler:school',
        description: 'Matriculation Examination/Ylioppilastutkinto'
      },
      {
        title: `Vocational qualification in ICT specialized in Cyber Security <br /> <span class="font-normal">Business College Helsinki</span> <br /> <span class="text-sm font-normal">Aug 2022 - Dec 2024 </span>`,
        icon: 'tabler:school'
      },
    ]}
    classes={{ container: 'max-w-3xl' }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Steps>

    <!-- Random stuff ****************** -->

  <Steps
    id="achievements"
    title="Other Achievements"
    items={[
      {
        title: `IT Institute Foundation Scholarship <br /><span class="font-normal">ATK-Instituutti Säätiö</span><br/><span class="text-sm font-normal">May 2025</span><br>`,
        icon: 'tabler:certificate',
        description: 'Awarded for outstanding performance, technical skills, teamwork and professional attitude in the field of IT.',
      },
      {
        title: `Hong Kong Internship Grant <br /><span class="font-normal">Suomen Liikemiesten Kauppaopiston Säätiö</span><br/><span class="text-sm font-normal">Apr 2024</span><br>`,
        icon: 'tabler:coins',
        description: 'Received a grant from the Finnish Business College Foundation to support participation in an internship in Hong Kong.',

      }
    ]}
    classes={{ container: 'max-w-3xl' }}
  />

  <!-- Random stuff ****************** -->

  <Steps
    id="events"
    title="Events"
    items={[
      {
        title: `AI and Systemic Risk Analytics Conference | Participant</a><br /><span class="font-normal">Bank of Finland, European Systemic Risk Board and RiskLab Finland</span><br/><span class="text-sm font-normal">Jun 2025</span><br><a class="text-sm font-normal underline" href="https://www.suomenpankki.fi/en/news-and-topical/events/calendar/events/conferences-and-workshops/2025/2025-06-27-28-sra/">What is the Systemic Risk Confrence?</a>`,
        icon: 'tabler:building-bank',
      },
      {
        title: `Taitaja 2025 Finalist | <a href="https://taitaja2025.fi/en/skills-categories/information-and-communication-technology/204-ict-specialist/">ICT Specialist</a><br /><span class="font-normal">Skills Finland ry</span><br/><span class="text-sm font-normal">May 2025</span><br><a class="text-sm font-normal underline" href="https://taitaja2025.fi/en/what-is-taitaja/">What is Taitaja?</a>`,
        icon: 'tabler:terminal-2',
      },
      {
        title: `Junction 2024 Kone x Granlund Challenge | Hackathon Competitor<br /><span class="font-normal">Junction Oy</span><br/><span class="text-sm font-normal">Nov 2024</span><br><a class="text-sm font-normal underline" href="https://github.com/JAAKKQ/InvenTek">Our project on GitHub</a><br><a class="text-sm font-normal underline" href="https://www.hackjunction.com/about-us">What is Junction?</a>`,
        icon: 'tabler:elevator',
      },
      {
        title: `Slush 2024 Recycling Team | Volunteer<br /><span class="font-normal">Slush Oy</span><br/><span class="text-sm font-normal">Nov 2024</span><br><a class="text-sm font-normal underline" href="https://slush.org/about/">What is Slush?</a>`,
        icon: 'tabler:leaf',
      },
      {
        title: `LähiTapiola Hack Day 2024 | Hacker<br /><span class="font-normal">LähiTapiola</span><br/><span class="text-sm font-normal">Oct 2024</span><br><a class="text-sm font-normal underline" href="https://www.lahitapiola.fi/tietoa-lahitapiolasta/uutishuone/ajankohtaista/vakuutuspalveluita-testattiin-lahitapiolan-hack-dayssa-kyberturva-toteutuu/">What is LähiTapiola Hack Day?</a>`,
        icon: 'tabler:terminal',
      },
      {
        title: `Generative AI in the financial sector | Hackathon Competitor<br /><span class="font-normal">Finance Finland Association</span><br/><span class="text-sm font-normal">Oct 2024</span><br><a class="text-sm font-normal underline" href="https://www.finanssiala.fi/en/about-us/">What is Finance Finland?</a>`,
        icon: 'tabler:robot',
      },
    ]}
    classes={{ container: 'max-w-3xl' }}
    
  >
      <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment></Steps>

  <!-- Features3 Widget ************** -->

  <Features3
    title="Technical Skills"
    subtitle="Diving into the Tech Wonderland, I transform ideas into IT magic!"
    columns={3}
    defaultIcon="tabler:point-filled"
    items={[
      {
        title: 'System Administration',
        description: 'I enjoy managing both on-premises and cloud-based infrastructure.',
      },
      {
        title: 'Cyber Security',
        description:
          'Practical experience in securing environments, vulnerability management and ethical hacking principles.',
      },
      {
        title: 'Software Development',
        description:
          'Experience writing clean, maintainable code in Python and JavaScript. Experienced with API development, CLI tools and full-stack projects.',
      },
    ]}
  >

  </Features3>

  <!-- Content Widget **************** -->

  <Content
    id="porfolio"
    title="Experimenting with Technology"
    subtitle=""
    isReversed
    items={[
      {
        icon: 'tabler:server-2',
        description:
          'Gained valuable insights into networking, virtualization, server management, and hardware configurations. The art of running servers, understanding how networks work, and the importance of adaptability in the tech landscape were among the many discoveries.',
      },
      {
        icon: 'tabler:app-window',
        description:
          'Experimented with a variety of software tools including Jenkins, Puppet, Git, pfSense, Suricata, OpenVPN, unbound, Nextcloud, NGINX and Apache.',
      },
    ]}
    image={{
      src: '~/assets/images/servers.jpg',
      alt: 'Image of my rack server',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Home Lab <br /><span class="text-2xl">Where Ideas Take Flight</span>
      </h3>
    </Fragment>
        <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        icon: 'tabler:device-gamepad',
        description:
          "In 2020, I started developing 'Beryllium,' an online multiplayer tactical first-person shooter using Unreal Engine 4. The game features competitive gameplay where two teams, Attackers and Defenders, engage in strategic encounters. Attackers aim to achieve specific objectives while Defenders employ various tactics to protect key positions and thwart their opponents.",
      },
      {
        icon: 'tabler:barcode',
        description:
          "Haven't looked at the source code since 2022 nor have I any game servers running anymore but if you would like to test the game locally send me an E-Mail and I will send you a Steam redeem code ;)",
      },
    ]}
    image={{
      src: '~/assets/images/videogame.jpg',
      alt: 'Image of the videogame',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        FPS Multiplayer made with Unreal Engine 4 <br /><span class="text-2xl">Inspired by Counter-Strike Series</span>
      </h3>
    </Fragment>

  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        icon: 'tabler:plane',
        description:
          'In the Flight Game, your goal is to reach Thailand without using up all your carbon credits. Answer sustainability questions correctly to earn more credits and keep flying.',
      },
      {
        icon: 'tabler:question-mark',
        description:
          'This was a group project at Metropolia UAS. Read more about the project in Finnish on <a class="underline" href="https://github.com/LeoLeerila/Projekti">GitHub</a>',
      },
    ]}
    image={{
      src: '/assets/images/flight-game.gif',
      alt: 'Gameplay and login gif',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Flight Game<br />
      </h3>
    </Fragment>
        <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Let's stay in touch!"
    subtitle="Have a question, idea or just want to say hi?"
    actions={[
      {
        variant: 'primary',
        text: 'Say Hello',
        href: '/contact',
      },
    ]}
  >
  </CallToAction>
</Layout>
